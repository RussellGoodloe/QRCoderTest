@model Byte[]
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Implementing QRCoder in my own stuff</title>

    <script>
        function printImg(source) {
            var win = window.open('');
            win.document.write('<img src="' + source + '" onload="window.print();window.close()" />');
            win.focus();
        }
    </script>
</head>
<body>
    <div>
        <h1>QR Code Testing! Fun stuff!</h1>
    </div>
    <div>
        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            <label>Enter a string</label>
            <input type="text" name="qrText" />
            <button>Submit</button>
        }
    </div>
    @{
        if (Model != null)
        {
            <h3>QR Code Successfully Generated</h3>
            <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" />
            <div>
                <a href="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" download="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))">Download</a>
                <a href="javascript:window.print()">Print</a>
                <a href="javascript:window.open(@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model)),'Image')">Open a window!</a>
            </div>
        }
    }
</body>
</html>